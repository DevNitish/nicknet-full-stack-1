<%- include('partials/nav'); %>
<!--jumbtron-->
<div class="container">
  <div class="jumbotron jumbotron-fluid bg-light text-dark my-2">
    <div class="container text-light">
      <h1 class="display-3 " style="  font-weight: 700; font-size: 44px;">Contact Us</h1>
      <p class="lead">Fill in the form below if you have any problem with the webiste, we will contact as soon as
        possible!</p>
    </div>
  </div>
  <!--FORM-->
  <div class="row">
    <div class="col-8">
      <h5 class="font-weight-bold text-center  px-3 mx-0 bg-light text-dark">Fill in the details below!</h4>
        <form>
          <div class="form-group row">
            <div class="col-4">
              <label for="queryuserMail" class="col-2 col-form-label">Email</label>
            </div>
            <div class="col-8">
              <input type="email" class="form-control" id="queryuserMail" required />
            </div>
          </div>
          <div class="form-group row">
            <div class="col-4">
              <label for="queryUser" class="col-2 col-form-label">Name</label>
            </div>
            <div class="col-8">
              <input type="text" class="form-control" id="queryUser" required />
            </div>
          </div>
          <div class="form-group row">
            <div class="col-4">
              <label for="queryDesc" class="col-2 col-form-label">Query</label>
            </div>
            <div class="col-8">
              <textarea class="form-control" rows="2" id="queryDesc" required></textarea>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-4"></div>
            <div class="col-8">
              <button type="submit" style="width: 100%;" class="btn btn-primary ">Submit</button>
            </div>
          </div>
        </form>
    </div>
  </div>
  
  <div class="alert alert-success" id="alert1" role="alert">
    Thanks for contacting us! we'll reply you in no time.
  </div>
  <!-- Main row-->
  
</div>
